<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context="com.reginalddc.teamderapp.CreateTeamFragment.CreateTeamFragment">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Create Team"
                    android:id="@+id/textView5"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="22dp"
                    android:layout_marginStart="22dp"
                    android:textColor="#2ECC71"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="0.20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Team Leader: "
                    android:textColor="@color/gray"
                    android:id="@+id/textView9"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="17dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/textView_teamLeader"
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView9"
                    android:layout_toEndOf="@+id/textView9"
                    android:textSize="18dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="25dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Team Name: "
                    android:layout_marginBottom="40dp"
                    android:id="@+id/textView10"
                    android:textColor="@color/gray"
                    android:layout_below="@+id/textView9"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="17dp"
                    android:layout_marginTop="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/editText_teamName"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="25dp"
                    android:layout_below="@+id/textView9"
                    android:layout_toRightOf="@+id/textView10"
                    android:layout_toEndOf="@+id/textView10"
                    android:background="@drawable/textarea_border"
                    android:hint="Add a team name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="No. of Members (2 to 6):  "
                    android:textSize="17dp"
                    android:textColor="@color/gray"
                    android:id="@+id/textView12"
                    android:layout_below="@+id/textView10"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentStart="true"
                    />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/textarea_border"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:id="@+id/editText_numOfMember"
                    android:inputType="number"
                    android:textSize="20dp"
                    android:hint="4"
                    android:gravity="left"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:layout_above="@+id/textView14"
                    android:layout_toRightOf="@+id/textView12"
                    android:layout_marginBottom="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/desc"
                    android:id="@+id/textView14"
                    android:layout_below="@+id/textView12"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="17dp" />



                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/editText_desc"
                    android:layout_below="@+id/textView14"
                    android:layout_above="@+id/nextBtn"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="20dp"
                    android:hint="Add a short description about your team"
                    android:inputType="text|textMultiLine"
                    android:background="@drawable/textarea_border"
                    android:textSize="17dp"
                    android:padding="10dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:background="@drawable/next_button"
                    android:text="@string/next"
                    android:id="@+id/nextBtn"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/editText_desc"
                    android:layout_alignStart="@+id/editText_desc"
                    android:layout_alignRight="@+id/editText_desc"
                    android:layout_alignEnd="@+id/editText_desc" />


            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>